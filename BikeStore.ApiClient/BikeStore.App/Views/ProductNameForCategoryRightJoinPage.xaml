<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BikeStore.App.Views.ProductNameForCategoryRightJoinPage"
             xmlns:ViewModels="clr-namespace:BikeStore.App.ViewModels"
             Title="Categories and Products">
    <ContentPage.Content>
        <StackLayout>
            <ListView ItemsSource="{Binding ProductNamePriceForCategories}" SelectionMode="None" RowHeight="150">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <HorizontalStackLayout Margin="20">
                                    <Frame 
                                                   Margin="10"
                                                   BorderColor="Black"
                                                   CornerRadius="50"
                                                   HeightRequest="60"
                                                   WidthRequest="60"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center">
                                        <Label Text="{Binding CategoryNameChar}" FontSize="Default" TextColor="Black" VerticalOptions="Center" HorizontalOptions="Center"/>
                                    </Frame>
                                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Start" Grid.Column="1" Spacing="10">
                                        <Label
                                                   Text="{Binding CategoryName}"
                                                   FontAttributes="Italic"
                                                   VerticalOptions="End" />
                                        <Label 
                                                   Text="{Binding ProductName}"
                                                   FontAttributes="Bold"
                                                   TextColor="DarkBlue"/>
                                        <Label
                                                   Text="{Binding ModelYear}"
                                                   FontAttributes="Italic"
                                                   VerticalOptions="End" />
                                        <Label 
                                                   Text="{Binding ListPrice}"
                                                   FontAttributes="Bold"
                                                   TextColor="DarkBlue"/>
                                    </VerticalStackLayout>
                                </HorizontalStackLayout>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <ActivityIndicator x:Name="Progress" IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" VerticalOptions="Center" HorizontalOptions="Center"/>
        </StackLayout>


    </ContentPage.Content>
</ContentPage>