<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BikeStore.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BikeStore.App"
    xmlns:views="clr-namespace:BikeStore.App.Views"
    Shell.FlyoutBehavior="Flyout">

    <FlyoutItem Title="Hello Xaml page">
        <Tab>
            <ShellContent  ContentTemplate="{DataTemplate views:DemoPage}" />
        </Tab>
    </FlyoutItem>
    
    <ShellContent
        Title="Customers from each city"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>
